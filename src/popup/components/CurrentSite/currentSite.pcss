.current-site {
    &__container {
        display: flex;
        justify-content: flex-end;
        z-index: var(--higher);
        padding-top: 1rem;
        padding-bottom: 3rem;
    }
    &__name{
        cursor: default;
    }

    &__title {
        font-size: 1.6rem;
        padding: 0 0.6rem;
        max-width: 26rem;
        text-align: center;
        margin: 2rem auto 3rem;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-weight: bold;
        color: var(--gray-base);
        position: relative;
        border-left: 1px solid var(--gray88);
    }

    &__icon {
        position: absolute;
        top: 0.1rem;
        left: -2.4rem;
        cursor: pointer;
        min-width: 1.5rem;
    }
   &__secure-status{
       cursor: default;
       position: absolute;
       left: 3rem;
       color: var(--green-base);
       font-size: 1.2rem;
       font-weight: 100;
       &:hover{
           cursor: default;
           text-decoration: underline;
       }
   }
}
.trusted{
    border: none;
    padding-left: 0.7rem;
}
