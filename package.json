{
    "name": "browser-assistant",
    "version": "1.1.2",
    "apiVersion": "1",
    "description": "AdGuard browser extension",
    "author": "adguard@adguard.com",
    "license": "LGPL-3.0",
    "scripts": {
        "lint": "eslint .",
        "dev": "BUILD_ENV=dev run-p build:*",
        "beta": "BUILD_ENV=beta run-p build:*",
        "release": "BUILD_ENV=release run-p build:*",
        "build:chrome": "BROWSER=chrome webpack --config tasks/webpack.js",
        "build:edge": "BROWSER=edge webpack --config tasks/webpack.js",
        "build:firefox": "BROWSER=firefox webpack --config tasks/webpack.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "locales:download": "node tasks/translations/index.js download",
        "locales:upload": "node tasks/translations/index.js upload",
        "locales:validate": "node tasks/translations/index.js validate",
        "locales:info": "node tasks/translations/index.js info",
        "watch": "BUILD_ENV=dev run-s \"build:chrome --watch\"",
        "watch:firefox": "BUILD_ENV=dev run-s \"build:firefox --watch\"",
        "watch:all": "run-s watch watch:firefox",
        "crx:beta": "export BUILD_ENV=beta; yarn build:chrome && node tasks/crx.js",
        "crx:release": "export BUILD_ENV=release; yarn build:chrome && node tasks/crx.js",
        "xpi": "yarn build:firefox && node tasks/xpi.js",
        "ci:increment": "yarn version --patch --no-git-tag-version",
        "artifacts:beta": "export BUILD_ENV=beta; yarn crx:beta && yarn xpi && node tasks/versionInfo.js",
        "artifacts:release": "export BUILD_ENV=release; yarn crx:release && yarn xpi && yarn build:edge && node tasks/versionInfo.js",
        "clear": "rm -rf build ; rm -rf node_modules"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.10.1",
        "@babel/preset-react": "^7.8.3",
        "@babel/register": "^7.12.1",
        "axios": "^0.19.2",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.0.6",
        "chalk": "^4.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "commander": "^6.1.0",
        "copy-webpack-plugin": "^5.1.1",
        "crx": "^5.0.1",
        "css-loader": "^3.4.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.18.3",
        "form-data": "^3.0.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^25.1.0",
        "npm-run-all": "^4.1.5",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "postcss-nested": "^4.2.1",
        "postcss-preset-env": "^6.7.0",
        "postcss-svg": "^3.0.0",
        "string-replace-loader": "^2.2.0",
        "style-loader": "^1.1.3",
        "url-loader": "^3.0.0",
        "web-ext": "^4.1.0",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11",
        "zip-webpack-plugin": "^3.0.0"
    },
    "dependencies": {
        "adguard-assistant": "https://github.com/AdguardTeam/AdguardAssistant#4.3.37",
        "classnames": "^2.2.6",
        "lodash": "^4.17.15",
        "mobx": "^5.15.4",
        "mobx-react": "^6.1.8",
        "nanoid": "^2.1.11",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-intl": "^3.12.0",
        "react-modal": "^3.11.2",
        "webextension-polyfill": "^0.6.0"
    }
}
