{
    "name": "browser-assistant",
    "version": "0.0.3",
    "description": "AdGuard browser extension",
    "author": "adguard@adguard.com",
    "license": "LGPL-3.0",
    "scripts": {
        "lint": "eslint .",
        "dev": "NODE_ENV=development run-p build:*",
        "beta": "NODE_ENV=beta run-p build:*",
        "release": "NODE_ENV=release run-p build:*",
        "build:chrome": "webpack --config tasks/chrome/webpack.chrome.js",
        "build:firefox": "webpack --config tasks/firefox/webpack.firefox.js",
        "build:edge": "webpack --config tasks/edge/webpack.edge.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "locales:download": "LOCALES=DOWNLOAD node tasks/locales.js",
        "locales:upload": "LOCALES=UPLOAD node tasks/locales.js",
        "watch": "NODE_ENV=development run-s \"build:chrome --watch\""
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-decorators": "^7.6.0",
        "@babel/plugin-proposal-export-default-from": "^7.5.2",
        "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "axios": "^0.19.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.3",
        "css-loader": "^3.2.0",
        "dotenv": "^8.0.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.2",
        "file-loader": "^4.2.0",
        "form-data": "^2.5.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "loader-utils": "^1.2.3",
        "npm-run-all": "^4.1.5",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "postcss-nested": "^4.1.2",
        "postcss-preset-env": "^6.7.0",
        "postcss-svg": "^3.0.0",
        "style-loader": "^1.0.0",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5",
        "webpack-conditional-loader": "^1.0.12",
        "webpack-merge": "^4.2.1",
        "zip-webpack-plugin": "^3.0.0"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "mobx": "^5.14.2",
        "mobx-react": "^6.1.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-modal": "^3.10.1",
        "webextension-polyfill": "^0.5.0"
    }
}
